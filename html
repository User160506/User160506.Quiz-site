  </div>  <script>
    const answers = { q1: '', q2: '', q3: '' };

    function randomTranslate() {
      const x = Math.random() * 200 - 100;
      const y = Math.random() * 200 - 100;
      return `translate(${x}px, ${y}px)`;
    }

    function noAnswer(step, btn) {
      // Store the answer immediately
      if(step === 1 && answers.q1 === '') answers.q1 = 'No';
      if(step === 2 && answers.q2 === '') answers.q2 = 'No';
      if(step === 3 && answers.q3 === '') answers.q3 = 'No';

      // Move the button for fun
      btn.style.transform = randomTranslate();

      // If it's the last question, show the result
      if(step === 3){
        document.getElementById('f-q1').value = answers.q1;
        document.getElementById('f-q2').value = answers.q2;
        document.getElementById('f-q3').value = answers.q3;
        document.getElementById('result').classList.remove('hidden');
      }
    }

    function yesAnswer(step) {
      if(step === 1 && answers.q1 === '') answers.q1 = 'Yes';
      if(step === 2 && answers.q2 === '') answers.q2 = 'Yes';
      if(step === 3 && answers.q3 === '') answers.q3 = 'Yes';

      if (step === 1) {
        document.getElementById("q1").classList.add("hidden");
        document.getElementById("q2").classList.remove("hidden");
      }
      if (step === 2) {
        document.getElementById("q2").classList.add("hidden");
        document.getElementById("q3").classList.remove("hidden");
      }
      if (step === 3) {
        document.getElementById('f-q1').value = answers.q1;
        document.getElementById('f-q2').value = answers.q2;
        document.getElementById('f-q3').value = answers.q3;
        document.getElementById("q3").classList.add("hidden");
        document.getElementById("result").classList.remove("hidden");
      }
    }

    const form = document.getElementById('feedbackForm');
    form.addEventListener('submit', async function(e){
      e.preventDefault();
      const action = form.getAttribute('action');
      const formData = new FormData(form);

      try {
        const res = await fetch(action, {
          method: 'POST',
          body: formData,
          headers: { 'Accept': 'application/json' }
        });
        if(res.ok) {
          document.getElementById('sendStatus').innerText = 'Thank you My lovee üòè‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è';
          form.reset();
        } else {
          document.getElementById('sendStatus').innerText = 'Oops, something went wrong ‚Äî try again later.';
        }
      } catch(err) {
        document.getElementById('sendStatus').innerText = 'Oops, network error ‚Äî try again later.';
      }
    });
  </script></body>
